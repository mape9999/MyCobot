<?xml version="1.0"?>

<model>
  <name>ppo_target_marker</name>
  <version>1.0</version>
  <sdf version="1.6">model.sdf</sdf>

  <author>
    <name>MyCobot PPO System</name>
    <email>mycobot@ppo.system</email>
  </author>

  <description>
    A bright green spherical marker to visualize PPO training targets in Gazebo.
    This marker helps visualize where the MyCobot robot should reach during 
    reinforcement learning training sessions.
  </description>

  <depend>
    <uri>model://ground_plane</uri>
  </depend>
</model>
